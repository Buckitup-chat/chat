                      <.icon id="share" class="w-4 h-4 mr-1 z-20 fill-white"/>
                      <span class="text-base text-white"> Invite</span>
                    </button>
                  </div>
                </div>
                <%= if @room.type == :request do %>
                  <.modal id="room-request-list"  class="z-30">
